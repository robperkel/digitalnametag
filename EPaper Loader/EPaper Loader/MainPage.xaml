<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPaper_Loader.MainPage"
             Unloaded="ContentPage_Unloaded">
    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Label
                Text="Select a COM Port"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />
            <Picker Title="COM Port" IsEnabled="True" x:Name="COMList">
                <Picker.Items>
                </Picker.Items>
            </Picker>
            <Label
                x:Name="ErrorLabel"
                Text="Unknown Error"
                IsVisible="False"
                TextColor="Red"
                FontAttributes="Bold"
                />
            <Button
                x:Name="RefreshBtn"
                Text="Refresh COM ports" 
                HorizontalOptions="Fill" 
                Pressed="RefreshBtn_Pressed"
                BackgroundColor="CornflowerBlue"/>
            <Button
                x:Name="ConnectBtn"
                Text="Press to open COM port" 
                HorizontalOptions="Fill" 
                Pressed="ConnectBtn_Pressed"/>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
