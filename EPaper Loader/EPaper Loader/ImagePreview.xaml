<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPaper_Loader.ImagePreview"
             Title="Load Image"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout Margin="10">
        <Image BackgroundColor="White"
               IsVisible="Collapse"
               x:Name="PreviewImage">
        </Image>
        <Button Text="Open Image" x:Name="OpenButton" Clicked="OpenButton_Clicked">
        </Button>
        <TableView Intent="Data" 
                   x:Name="ImageTable" Margin="0,0,0,0"
                   IsVisible="False"
                   >
            <TableRoot>
                <TableSection>
                    <TextCell Text="Image Size" Detail="Unknown" x:Name="ImageSizeText"></TextCell>
                    <TextCell Text="Detected Colors" Detail="Unknown" x:Name="ColorText"></TextCell>
                </TableSection>
            </TableRoot>
        </TableView>

    </VerticalStackLayout>
</ContentPage>