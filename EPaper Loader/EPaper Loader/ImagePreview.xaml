<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EPaper_Loader.ImagePreview"
             Title="Load Image"
             NavigatedTo="ContentPage_NavigatedTo">
    <VerticalStackLayout>
        <Label
            Text="System Configuration"
            Margin="0,0,0,0"
            Padding="0,0,0,0"
            />
        <TableView Intent="Data"  IsVisible="False" 
                   x:Name="InfoTable" Margin="0,0,0,0"
                   >
            <TableRoot>
                <TableSection Title="System Configuration">
                    <TextCell Text="Display Resolution" Detail="Unknown" x:Name="ResolutionText"></TextCell>
                    <TextCell Text="Display Colors" Detail="Unknown" x:Name="ColorModeText"></TextCell>
                    <TextCell Text="Firmware Version" Detail="Unknown" x:Name="FirmwareText"></TextCell>
                    <TextCell Text="Build Date" Detail="Unknown" x:Name="BuildText"></TextCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </VerticalStackLayout>
</ContentPage>