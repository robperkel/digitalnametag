<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="EPaper_Loader.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:EPaper_Loader"
    Shell.FlyoutBehavior="Disabled"
    Title="EPaper Loader"
    Disappearing="Shell_Disappearing"
    >
    <TabBar>
        <Tab Title="Device Setup">
            <ShellContent
        Title="Device Setup"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="DeviceSetup" />
        </Tab>
        <Tab Title="Load Image">
            <ShellContent
        Title="Load Image"
        ContentTemplate="{DataTemplate local:ImagePreview}"
        Route="ImagePreview" />
        </Tab>
    </TabBar>
</Shell>
